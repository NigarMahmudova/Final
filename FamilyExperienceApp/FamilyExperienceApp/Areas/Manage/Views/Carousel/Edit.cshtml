@model ImageCarousel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Carousel Edit</h1>
        </div>
        <div class="col-md-8">
            <form method="post" asp-action="edit" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control" onchange="readURL(this);">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                    <input type="hidden" name="ImageName" value="@Model.ImageName" />
                    <img id="sliderImage" src="~/manage/uploads/carousels/@Model.ImageName" />                    
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}

