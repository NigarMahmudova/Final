@model Product﻿

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Product Create</h1>
        </div>
        <div class="col-md-8">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="CategoryId">Category</label>
                        <select class="form-control" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories,nameof(Category.Id),nameof(Category.Name))">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="ColorId">Color</label>
                        <select class="form-control" asp-for="ColorId" asp-items="new SelectList(ViewBag.Colors,nameof(Color.Id),nameof(Color.Name))">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="SizeIds">Sizes</label>
                        <select class="form-control" asp-for="SizeIds" asp-items="new SelectList(ViewBag.Sizes,nameof(Size.Id),nameof(Size.Name))">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="SalePrice">SalePrice</label>
                        <input asp-for="SalePrice" class="form-control">
                        <span class="text-danger" asp-validation-for="SalePrice"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="CostPrice">CostPrice</label>
                        <input asp-for="CostPrice" class="form-control">
                        <span class="text-danger" asp-validation-for="CostPrice"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="DiscountPercent">DiscountPercent</label>
                        <input asp-for="DiscountPercent" class="form-control">
                        <span class="text-danger" asp-validation-for="DiscountPercent"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Desc">Description</label>
                        <textarea asp-for="Desc" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Desc"></span>
                    </div>
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="form-group col-md-4">
                            <label asp-for="Gender">Gender</label>
                            <Select asp-for="Gender" class="form-control">
                                <option value="@(true)">Men</option>
                                <option value="@(false)">Women</option>
                                <option value="@(null)">Kids</option>
                            </Select>
                            <span class="text-danger" asp-validation-for="Gender"></span>
                        </div>
                        <div class="form-group col-md-4 d-flex align-items-center justify-content-center" style="margin-bottom: 0 !important">
                            <label asp-for="IsNew" style="margin-bottom: 0 !important; margin-right: 3px !important">IsNew</label>
                            <input asp-for="IsNew" class="form-check-input" style="width: 1.5rem; height: 1.5rem">
                            <span class="text-danger" asp-validation-for="IsNew"></span>
                        </div>
                        <div class="form-group col-md-4 d-flex align-items-center justify-content-center" style="margin-bottom: 0 !important">
                            <label asp-for="StockStatus" style="margin-bottom: 0 !important; margin-right: 3px !important">StockStatus</label>
                            <input asp-for="StockStatus" class="form-check-input" style="width: 1.5rem; height: 1.5rem">
                            <span class="text-danger" asp-validation-for="StockStatus"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PosterFile">PosterFile</label>
                        <input asp-for="PosterFile" class="form-control">
                        <span class="text-danger" asp-validation-for="PosterFile"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="HoverPosterFile">HoverPosterFile</label>
                        <input asp-for="HoverPosterFile" class="form-control">
                        <span class="text-danger" asp-validation-for="HoverPosterFile"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="ImageFiles">ImageFiles</label>
                        <input asp-for="ImageFiles" class="form-control">
                        <span class="text-danger" asp-validation-for="ImageFiles"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>



@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}
