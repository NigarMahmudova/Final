@model Order

@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <h5 class="card-title">Order informations:</h5>
                            <h6 class="card-subtitle mb-2">FullName: @Model.FullName</h6>
                            <h6 class="card-subtitle mb-2">Email: @Model.Email</h6>
                            <h6 class="card-subtitle mb-2">Phone: @Model.Phone</h6>
                            <h6 class="card-subtitle mb-2">Address: @Model.Address</h6>
                            <h6 class="card-subtitle mb-2">Note: @Model.Note</h6>
                            <h6 class="card-subtitle mb-2">Date: @Model.CreatedAt.ToString("dd-MM-yyyy HH:mm")</h6>
                        </div>

                        <div class="col-lg-6">
                            <h5 class="card-title">Order Items:</h5>
                            @foreach (var item in Model.OrderItems)
                            {
                                <h6 class="card-subtitle mb-2">@item.Product.Name x @item.Count   @((item.Product.DiscountedPrice > 0 ? item.Product.DiscountedPrice : item.Product.SalePrice).ToString("0.00"))</h6>
                            }
                            <h6 class="card-subtitle mb-2">TotalAmount: @Model.TotalAmount</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

