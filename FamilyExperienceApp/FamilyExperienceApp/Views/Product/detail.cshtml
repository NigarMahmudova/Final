                                <span itemprop="title">Home</span>
                            </a>
                            <span class="fx-breadcrumbs-separator">|</span>
                            <span itemprop="title" class="qodef-breadcrumbs-current">Shop</span>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div id="fx-detail-page">
                        <div class="product fx-single-inner">
                            <div class="d-flex">
                                <div class="col-lg-7">
                                    <div class="fx-product-gallery"
                                        style="opacity: 1; transition: opacity .25s ease-in-out;">
                                    
                                        <div class="product-large-slider mb-20">
                                        @foreach (var item in Model.Product.ProductImages)
                                        {
                                            <div class="pro-large-img img-zoom">
                                                <img width="515" height="433" src="~/manage/uploads/products/@item.ImageName" alt="" />
                                            </div>
                                        }
                                            
                                        </div>
                                        <div class="pro-nav slick-row-5">
                                        @foreach (var item in Model.Product.ProductImages)
                                        {
                                            <div class="pro-nav-thumb">
                                                <img width="152" height="187" src="~/manage/uploads/products/@item.ImageName" alt="" />
                                            </div>
                                        }
                                        </div>
                                    </div>
                                </div>


                                <div class="col-lg-5">
                                    <div class="summary entry-summary">
                                        <h1 class="fx-product-title product_title entry-title">@Model.Product.Name</h1>
                                        <p class="price"><span class="woocommerce-Price-amount amount"><bdi><span
                                                        class="woocommerce-Price-currencySymbol">&#36;</span>@(Model.Product.DiscountedPrice>0? Model.Product.DiscountedPrice:Model.Product.SalePrice)</bdi></span>
                                        </p>
                                        <div class="fx-product-details-short-description">
                                            <p>@Model.Product.Desc</p>
                                        </div>
                                        <!-- <form class="cart"
                                            action="https://corsen.qodeinteractive.com/product/beige-handbag/"
                                            method="post" enctype='multipart/form-data'>
                                            <div class="qodef-quantity-buttons quantity">
                                                <span class="fx-quantity-minus"></span>
                                                <input type="text" id="quantity_64c8d7cba6ac1"
                                                    class="input-text qty text fx-quantity-input" data-step="1"
                                                    data-min="1" data-max="" name="quantity" value="1" aria-label="Qty"
                                                    size="4" placeholder="" inputmode="numeric" />
                                                <span class="fx-quantity-plus"></span>
                                            </div>
                                            <button type="submit" name="add-to-cart" value="757"
                                                class="detail_add_to_cart_button wp-element-button js_add_to_cart">Add to
                                                cart</button>
                                        </form> -->

                                        <div class="summary-content">
                                            <!-- color -->
                                            <div class="ilgiliUrunSecenek" id="productDetailRelated">
                                                <a class="detailLink detailUrl" href="#">
                                                    <div class="color-box"
                                                        style="background-color: @Model.Product.Color.Name; width: 20px; height: 20px; margin-bottom: 15px; border: 1px solid #000;">
                                                    </div>
                                                </a>
                                            </div>
            
                                            <!-- size -->
                                            <div class="MiddleList" style="margin-top: 0px;">
                                            @if (Model.Product.StockStatus)
                                            {
                                                <div id="divUrunEkSecenek" class="Formline BorderNone">
                                                    <div class="eksecenekLine selectvaryasyon">
                                                        <span class="right_line">
                                                            <select name="ddlEkSecenek0" class="eksecenekSelect">
                                                                <option value="-1">Select</option>
                                                                @foreach (var item in Model.Product.ProductSizes)
                                                                {
                                                                    <option tipid="2" value="@item.SizeId">@item.Size.Name</option>

                                                                }

                                                            </select>
                                                        </span>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div id="divStokYok" >
                                                    Item is out of stock.
                                                </div>
                                            }

                                                
                                                <div class="buybutton" id="divSatinAl">
                                                <a asp-controller="product" asp-action="addtobasket" asp-route-id="@Model.Product.Id" asp-route-size="" name="add-to-cart"
                                                        class="js_add_to_cart button alt wp-element-button">Add to
                                                        cart</a>
                                                </div>
                                            </div>
            
                                        </div>

                                        <div class="fx-add-to-wishlist add-to-wishlist-757">
                                            <div class="fx-add-button">
                                                <a href="indexf963.html?add_to_wishlist=757&amp;_wpnonce=19fbfce4e3"
                                                    class="add_to_wishlist single_add_to_wishlist">
                                                    <i class="yith-wcwl-icon fa fa-heart-o"></i>
                                                    <span>Add to wishlist</span>
                                                </a>
                                            </div>

                                        </div>
                                        <div class="product_meta">
                                            <span class="sku_wrapper">
                                                <span class="fx-meta-label">SKU:</span>
                                                <span class="sku fx-meta-value">061</span>
                                            </span>
                                            <span class="posted_in">
                                                <span class="fx-meta-label">Category:</span>
                                                <span class="fx-meta-value"><a
                                                        href="#" rel="tag">@Model.Product.Category.Name</a></span>
                                            </span>
                                            <span class="tagged_as">
                                                <span class="fx-meta-label">Tag:</span>
                                                <span class="fx-meta-value"><a
                                                        href="../../product-tag/collections/index.html"
                                                        rel="tag">collections</a></span>
                                            </span>
                                        </div>
                                        <div class="fx-social-share">
                                            <a class="fx-social-share-dropdown-opener" href="#">
                                                <span class="fx-social-title">Share:</span> </a>
                                            <div class="fx-social-share-dropdown">
                                                <ul class="fx-shortcode-list">
                                                    <li class="fx-facebook-share"> <a class="qodef-share-link" href="#">
                                                            <span class="qodef-social-network-text">fb</span> </a></li>
                                                    <li class="fx-twitter-share"> <a class="qodef-share-link" href="#">
                                                            <span class="qodef-social-network-text">tw</span> </a></li>
                                                    <li class="fx-pinterest-share"> <a class="qodef-share-link"
                                                            href="#">
                                                            <span class="qodef-social-network-text">pi</span> </a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <section class="info-tabmenu">
                                <div class="fx--tabs fx-tabs-wrapper">
                                    <ul class="tabs fx-detail-tabs" role="tablist">
                                        <li class="description_tab active" data-id="tab-title-description" role="tab">
                                            <a href="#tab-description">
                                                Description </a>
                                        </li>
                                        <li class="additional_information_tab" data-id="tab-title-additional_information"
                                            role="tab">
                                            <a href="#tab-additional_information">
                                                Additional information </a>
                                        </li>
                                        <li class="reviews_tab" data-id="tab-title-reviews" role="tab">
                                            <a href="#tab-reviews">
                                                Reviews (@Model.Product.ProductReviews.Count) </a>
                                        </li>
                                        <!-- <span class="fx-product-tabs-line" style="width: 124.312px;left: 0px;"></span> -->
                                    </ul>
                                    <div class="fx-Tabs-panel"
                                        role="tabpanel" id="tab-title-description">
                                        <h2>Description</h2>
                                        <section class="description">
                                            <p>
                                                @Model.Product.Desc
                                            </p>
                                        </section>
                                    </div>
                                    <div class="fx-Tabs-panel d-none"
                                        role="tabpanel" id="tab-title-additional_information">
                                        <h2>Additional information</h2>
                                        <table class="fx-product-attributes shop_attributes">
                                            <tr>
                                                <th>Color</th>
                                                <td>@Model.Product.Color.Name</td>
                                            </tr>
                                            <tr>
                                                <th>Sizes</th>
                                                @foreach (var item in Model.Product.ProductSizes)
                                                {
                                                    var arr = item.Product.ProductSizes.Select(x => x.Size.Name).ToArray();
                                                    result = string.Join(", ", arr);
                                                }
                                                <td>@result</td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="fx-Tabs-panel d-none" role="tabpanel" id="tab-title-reviews">
                                    <div id="reviews" class="fx-Reviews">
                                    @if(Model.Product.ProductReviews.Count == 0)
                                    {
                                        <div id="comments">
                                            <h2 class="fx-Reviews-title">
                                                Reviews
                                            </h2>
                                            <p class="fx-noreviews">There are no reviews yet.</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="total-reviews">
                                            @foreach (var item in Model.Product.ProductReviews)
                                            {
                                                <div class="review-box" style="border: 1px solid #000; padding: 10px; margin-bottom: 10px">
                                                    <p class="stars fx-comment-form-ratings" style="margin-bottom:10px">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        @*<span class="@(i<= item.Rate? "good":"")"><i class="fa fa-star"></i></span>*@
                                                        <svg class="qodef-svg--star"
                                                             xmlns="http://www.w3.org/2000/svg"
                                                         width="15.407" height="14.378" fill="@(i<= item.Rate? "":"gray")"
                                                             viewBox="0 0 15.407 14.378">
                                                             <path d="M14.907 5.645H9.375L7.7.5 6.028 5.645H.5L5 8.732l-1.737 5.145L7.7 10.662l4.438 3.216L10.4 8.732Z"
                                                                  stroke-linejoin="round" />
                                                             </svg>
                                                    }
                                                    </p>
                                                    <div class="post-author">
                                                        <p style="font-size: 12px;font-style: italic;text-transform: capitalize;margin-bottom:10px">
                                                            <span style="font-size: 13px;">@item.AppUser.FullName -</span>
                                                            @item.CreatedAt.ToString("dd MMMM, yyyy")
                                                        </p>
                                                    </div>
                                                    <p style="font-size: 13px;font-style: italic;margin-bottom:0">@item.Text</p>
                                                </div>
                                            }
                                        </div>
                                    }
                                    
                                    @if (User.Identity.IsAuthenticated && Model.Product.ProductReviews.Any(x => x.AppUserId == User.FindFirst(ClaimTypes.NameIdentifier).Value))
                                    {
                                        <h3 style="padding: 10px; color: #fff; background-color:#000; font-style: italic; font-size:15px">You have already written review here!</h3>
                                    }
                                    else
                                    {
                                        @Html.Partial("_ProductReviewFormPartial",Model.Review)
                                    }
                                    </div>
                                </div>
                                </div>
                            </section>


                            <section class="related products" style="padding-bottom: 0 !important;">
                                <h2>Related products</h2>
                                <div class="shop-products">
                                    <div class="row g-4">
                                    @foreach(var item in Model.RelatedProducts)
                                    {
                                        <div class="col-lg-3 fx-e">
                                            <div class="fx-product-image">
                                                <img width="600" height="734"
                                                 src="~/manage/uploads/products/@item.ProductImages.FirstOrDefault(x=>x.PosterStatus==true)?.ImageName"
                                                 class="attachment-fx size-fx_thumbnail" alt="a" />
                                                @if (item.IsNew)
                                                {
                                                    <span class="fx-product-mark qodef-new">New</span>
                                                }
                                                <div class="fx-product-image-inner">
                                                    <a asp-action="getdetail" asp-controller="product" data-quantity="1"
                                                   class="button add_to_cart_button">Add to cart</a>
                                                    <div class="fx-add-to-wishlist">

                                                        <div class="fx-add-button">
                                                            <a href="#" class="fx-add-to-wishlist single_add_to_wishlist">
                                                                <i class="fx-icon fa fa-heart-o"></i>
                                                                <span>Add to wishlist</span>
                                                            </a>
                                                        </div>

                                                    </div>
                                                    <a href="#" class="button fx-button">Quick View</a>
                                                </div>
                                                <a asp-action="detail" asp-controller="product" class="fx-LoopProduct-link"></a>
                                            </div>
                                            <div class="fx-product-content">
                                                <h6 class="fx-product-title fx-loop-product__title">
                                                    <a asp-action="detail" asp-controller="product" class="fx-LoopProduct-link">
                                                        @item.Name
                                                    </a>
                                                </h6>
                                                <div class="fx-product-categories fx-e-info">
                                                    <a asp-action="detail" asp-controller="product" rel="tag">@item.Category.Name</a>
                                                    <div class="fx-info-separator-end"></div>
                                                </div>
                                                <span class="price">
                                                    @if (item.DiscountedPrice > 0)
                                                    {
                                                        <del aria-hidden="true">
                                                            <span class="woocommerce-Price-amount amount">
                                                                <span class="woocommerce-Price-currencySymbol">&#036;</span>@item.SalePrice
                                                            </span>
                                                        </del>
                                                        <ins>
                                                            <span class="woocommerce-Price-amount amount">
                                                                <span class="woocommerce-Price-currencySymbol">&#036;</span>@item.DiscountedPrice
                                                            </span>
                                                        </ins>
                                                    }
                                                    else
                                                    {
                                                        <ins>
                                                            <span class="woocommerce-Price-amount amount">
                                                                <span class="woocommerce-Price-currencySymbol">&#036;</span>@item.SalePrice
                                                            </span>
                                                        </ins>
                                                    }
                                                </span>
                                            </div>
                                        </div>
                                    }
                                    </div>

                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <!-- Main section end -->
@section Scripts{
    <script src="~/./assets/js/plugins.js"></script>
    <script src="~/./assets/js/active.js"></script>

    <script>
        let tabs = document.querySelectorAll('.tabs li');

        for (let tab of tabs) {
            tab.onclick = function (e) {
                e.preventDefault();
                let active = document.querySelector('.active');

                active.classList.remove('active');
                this.classList.add('active');

                let data_id = this.getAttribute('data-id');
                let contents = document.querySelectorAll('.fx-Tabs-panel');

                for (let content of contents) {
                    if (content.id === data_id) {
                        content.classList.remove('d-none');
                    }
                    else {
                        content.classList.add('d-none');
                    }
                }
            }
        }
    </script>

